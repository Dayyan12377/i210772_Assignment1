<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#def8f8"
    tools:context=".MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backarror"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Your Phone Number"
        android:textColor="@color/mainColor"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/sent_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We've Sent a code to"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="85dp"
        />

    <TextView
        android:layout_toRightOf="@+id/sent_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+92332 7130747"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="85dp"
        android:textColor="@color/mainColor"

        />

    <EditText
        android:id="@+id/first_code"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/hollow_circles1"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="55dp"
        android:textSize="50dp"

        />

    <EditText
        android:id="@+id/second_code"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/hollow_circles1"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="5dp"
        android:textSize="50dp"
        android:layout_toRightOf="@id/first_code"

        />

    <EditText
        android:id="@+id/third_code"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/hollow_circles1"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="5dp"
        android:textSize="50dp"
        android:layout_toRightOf="@id/second_code"

        />

    <EditText
        android:id="@+id/forth_code"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/hollow_circles1"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="5dp"
        android:textSize="50dp"
        android:layout_toRightOf="@id/third_code"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:backgroundTint="@color/mainColor"
        android:text="Verify"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/countdown1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send code Again"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="70dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/countdown2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Countdown"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textColor="@color/mainColor"
        android:layout_toRightOf="@id/countdown1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backColor"
        android:layout_marginTop="320dp">

        <Button
            android:id="@+id/keypad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/Color3"
            android:text="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/keypad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/keypad1"
            android:backgroundTint="@color/Color3"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/keypad3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/Color3"
            android:text="3"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:layout_toRightOf="@id/keypad2"
            />

        <Button
            android:id="@+id/keypad4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/Color3"
            android:text="4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/keypad5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/keypad4"
            android:backgroundTint="@color/Color3"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/keypad6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/Color3"
            android:text="6"
            android:layout_marginStart="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:layout_toRightOf="@id/keypad5"
            />

        <Button
            android:id="@+id/keypad7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/Color3"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/keypad8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/keypad7"
            android:backgroundTint="@color/Color3"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/keypad9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/Color3"
            android:text="9"
            android:layout_marginStart="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:layout_toRightOf="@id/keypad8"
            />

        <Button
            android:id="@+id/keypad0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/keypad7"
            android:backgroundTint="@color/Color3"
            android:text="0"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/backSpace1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/back_space"
            android:layout_toRightOf="@id/keypad0"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="50dp"
            />




    </RelativeLayout>





</RelativeLayout>